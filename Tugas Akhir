void loading(){
    	system("COLOR 0e");
	system("cls");
	printf("\n\n\n\t\t\t\tLoading...");
	printf("\n\n\n\t\t\t\t");
	
	for(int i = 0; i < 25; i ++)
			cout<< (char)177;
	cout<<"\r";
	cout<<"\t\t\t\t";		
	for(int i = 0; i < 25; i++){
		
		cout<< (char)219;
		Sleep(150);
	}
	
	cout<<"\n\t\t\t\t"<<(char)1 <<"!";
	system("cls");
}

int main() {
    string user;
    cout <<"Masukan Username \n";
    cin >> user;
	mainmenu();
    
    
}


void mainmenu(){
    loading();
    int choice;
    cout << "******************************************************" << endl;
    cout << "****************SELAMAT DATANG DI WARNET UNIDA*******************************" << endl;
    cout << "===========================Menu==============================\n";
    cout << "1.Registration Member\n";
    cout << "2.Paket\n";
    cout << "3.Exit\n";
    cout << "================\n";
    cout << "Enter Your Choice\n";
    cin >> choice;
    cout << endl;

    switch (choice) {

        case 1:
            daftar();
            break;

        case 2:
            daftarharga();
            break;
        case 3:
            exitProgram();
            break;
        
        default:
            cout << "Invalid choice. Please select a valid option." << endl;
            mainmenu();
    }

}
void diskon() {
    int total;
    cout << "Masukan Total Tagihan Mu = ";
    cin >> total;
    
    int diskon = total / 2;
    
    cout << "Selamat Kamu dapat Diskon 50%\n";
    cout << "Total Tagihan Setelah Diskon = " <<diskon << endl;
    Sleep(5000);
}


