    }
    
    cout << "6.Main Menu\n";
    cout << "Enter Your Choice Food = ";
    cin>>choicemakan;
    
   
//Terakhir Sampai sini Di bagian masukin pilhan ke switch
    switch (choicemakan) {
        case 1:
            cout<<"===========================\n";
            cout<<"|Ingatlah Nominal Tagihan MU|\n";
            cout<<"===========================\n";
            cout<<"Tagihan mu = |"<<indg<<"|"<<endl;
